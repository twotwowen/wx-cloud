/* pages/songDetail/songDetail.wxss */
.songDetailContainer {
	height: 100%;
	background: rgba(0,0,0,.01);
	display: flex;
	flex-direction: column;
	align-items: center;
}
.musicName {
	font-size: 38rpx;
	word-spacing: 10rpx;
	margin-top: 50rpx;
	max-width: 500rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/* 底座 */
.circle {
	position: relative;
	z-index: 100;
	width: 66rpx;
	height: 66rpx;
	border-radius: 50%;
	background: #ddd;
	margin: 10rpx 0;
}

/* 摇杆 */
.needle {
	position: relative;
	z-index: 99;
	top: -33rpx;
	left: 56rpx;
	width: 192rpx;
	height: 274rpx;
	
	transform-origin: 44rpx -10rpx;
	transform: rotate(-20deg);
	transition: transform 1s;
}

/* 摇杆落下 */
.needleRotate {
	transform: rotate(0deg);
}

/* 磁盘 */
.discContainer {
	position: relative;
	top: -170rpx;
	width: 578rpx;
	height: 598rpx;
}

/* 设置动画帧  from to(只有起使帧与结束帧)  百分比可以设置不同的帧*/
/* 不能使用-ms-keyframes */
@keyframes disc{
	from{
		transform: rotate(0deg);
	}
	to{
		transform: rotate(360deg);
	}
}
.discAnimation {
	animation: disc 10s linear infinite;
	animation-delay: .8s;
}

.disc {
  width: 100%;
  height: 100%;
}
/* 歌曲封面 */
.musicImg {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}

/* 底部控制器 */
.musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  border-top: 1rpx solid #333;
  width: 100%;
  display: flex;
}
.musicControl text {
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #333;
  font-size: 50rpx;
}
.musicControl text.big {
  font-size: 80rpx;
}