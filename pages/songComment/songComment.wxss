/* pages/songComment/songComment.wxss */
page {
	background-color: #eee;
	height: 100%;
}

.songTitle {
	background-color: #fff;
	height: 100rpx;
	display: flex;
	padding: 20rpx 30rpx;
}
.songPic {
	position: relative;
	width: 100rpx;
	height: 100rpx;
	vertical-align: middle;
}
.songPic .circle {
	width: 100%;
	height: 100%;
}
.songPic .musicImg {
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
	margin: auto;
	border-radius: 50%;
	width: 60rpx;
	height: 60rpx;
}
.songName {
	vertical-align: middle;
	font-size: 26rpx;
	line-height: 100rpx;
	margin-left: 20rpx;
}
.comment {
	background-color: #fff;
	margin-top: 20rpx;
	padding: 20rpx 30rpx;
	padding-bottom: 80rpx;
}
.commentHeader {
	display: flex;
	justify-content: space-between;
	font-size: 36rpx;
	font-weight: 600;
	border-bottom: 1rpx solid #eee;
	padding-bottom: 25rpx;
}

.commentHeader .option {
	width: 200rpx;
	font-weight: normal;
	font-size: 26rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
}
.option .active {
	font-size: 28rpx;
	font-weight: 600;
}
/* 单个评论 */
.commentItem {
	padding: 35rpx 0;
	border-bottom: 1rpx solid #eee;
}
.commentItem .top {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.commentItem .top .left {
	display: flex;
}
.commentItem .top .left image {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.commentItem .top .left .arInfo {
	display: flex;
	flex-direction: column;
	margin-left: 20rpx;
	align-self: center;
}
.commentItem .top .left .name {
	font-size: 27rpx;
}
.commentItem .top .left .time {
	font-size: 20rpx;
	color: gray;
}
.commentItem .liked {
	position: relative;
}
.commentItem .liked .count {
	position: absolute;
	top: -21rpx;
	font-size: 23rpx;
	color: gray;
}
.commentItem .liked .icon {
	font-size: 50rpx
}
.commentItem .bottom {
	padding-left: 100rpx;
}
.commentItem .bottom .txt {
	font-size: 26rpx;
	line-height: 40rpx;
	letter-spacing: 4rpx;
}
.commentItem .bottom .reply {
	font-size: 20rpx;
  margin-top: 30rpx;
  color: cornflowerblue;
}
/* 书写评论 */
.makeComments {
	position: fixed;
	bottom: 20rpx;
	left: 30%;
	width: 300rpx;
	height: 80rpx;
	border: 2rpx solid #333;
	border-radius: 60rpx;
	line-height: 80rpx;
	text-align: center;
}
.makeComments .icon {
	font-size: 50rpx;
	position: absolute;
	left: 6rpx;
}

/* 更多评论 */
.moreComments {
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 80%;
	border-radius: 50rpx 50rpx 0 0;
	background-color: #fff;
	
}
.moreComments .header:first-child {
	height: 80rpx;
	background-color: #fff;
	padding: 10rpx 20rpx;
	border-radius: 50rpx 50rpx 0 0;
	line-height: 80rpx;
	text-align: start;
}
.moreComments .header .exit {
	display: inline-block;
	width: 60rpx;
	height: 60rpx;
	font-size: 43rpx;
	line-height: 50rpx;
	text-align: center;
}
