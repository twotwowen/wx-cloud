/* pages/recommendSong/recommendSong.wxss */
.header {
	position: relative;
	width: 100%;
	height: 300rpx;
}
.header image {
	width: 100%;
	height: 100%;
}

.header .date {
	position: absolute;
	top: 50%;
	left:50%;
	width: 300rpx;
	height: 100rpx;
	text-align: center;
	line-height: 100rpx;
	color: #fff;
	font-size: 40rpx;
	margin-top: -4%;
	margin-left: -18%;
}
.header .date .day {
	font-size: 80rpx;
}
/* 列表 */
.listContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.listHeader {
  height: 80rpx;
  line-height: 80rpx;
	margin-bottom: 20rpx;
}
.listHeader .changeMore {
  float: right;
}
/* 歌曲 */
.listScroll {
	height: calc(100vh - 380rpx);
}
.scrollItem {
	display: flex;
	position: relative;
	margin-bottom: 35rpx;
}
.scrollItem image {
	width: 80rpx;
	height: 80rpx;
	border-radius: 8rpx;
}
.musicInfo {
	display: flex;
	flex-direction: column;
	margin-left: 20rpx;
}
.musicInfo text {
	height: 40rpx;
	line-height: 40rpx;
	font-size: 26rpx;
	max-width: 400rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.scrollItem .iconfont {
	position: absolute;
	right: 10rpx;
	width: 80rpx;
	height: 80rpx;
	text-align: center;
	z-index: 2;
	line-height: 80rpx;
}